    ViewData["Title"] = "Privacy Policy";
}

<div id="contain">
    <h1>@ViewData["Title"]</h1>
    <div id="pSize">
        <b>
            <p>This website was created using Microsoft's ASP.NET 6.0 MVC Pages via Azure as a cloud hosting platform</p>
            <p>Any inquiries about the development of website, you can reach me here:</p>
        </b>
        

    </div>
    <div >
        <h2><a id ="contain3r" href="https://www.linkedin.com/in/noah-t-butler/" target="_blank">My LinkedIn page</a></h2>
